<!-- header macska neve behelyettesítődik, dropdown a napközi kiválasztásához-->

<%- include('header') -%>

    <div class="header">
      <span>Cicák</span>
      <span>&raquo;</span>
      <span id="gray">Cica módosítása</span> 
    </div>

    <form action="">
      <div class="container cat">
        <div class="row">
          <div class="left_col">
            <label for="name">Név</label>
          </div>
          <div class="right_col">
            <input type="text" id="name" placeholder="<%= cica.nev %>" disabled />
          </div>
        </div>
        <div class="row">
          <div class="left_col">
            <label for="weight">Súly</label>
          </div>
          <div class="right_col">
            <input type="text" id="weight" placeholder="<%= cica.suly %>"/>
          </div>
        </div>
        <div class="row">
          <div class="left_col">
            <label for="food">Kedvenc étel</label>
          </div>
          <div class="right_col">
            <input type="text" id="food" placeholder="<%= cica.etel %>"/>
          </div>
        </div>

        <div class="row">
          <div class="left_col">
            <label for="friendly">Barátságos?</label>
          </div>
          <div class="right_col">
            <input type="text" id="friendly" placeholder="<%= cica.baratsagos %>"/>
          </div>
        </div>

        <div class="row">
          <div class="left_col">
            <label for="daycare">Napközi</label>
          </div>
          <div class="right_col">
              <select name="daycare" id="daycare">
                <% napkozik.forEach(function(napkozi){ %>
                <option value="<%= napkozi._id %>"><%= napkozi.nev %></option>
                <% }); %>
              </select>
          </div>
        </div>
      </div>
      <input type="submit" value="Mentés" class="nav_btn" />
      <a href="/cica_nezet" class="nav_btn">Mégse</a>
    </form>
  </body>
</html>
