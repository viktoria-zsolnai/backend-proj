<%- include('header') -%>
<div class="nav" style="background-color: white">
  <a href="/napkozi_nezet" class="nav_btn one">Napközik</a>
  <a href="#" class="nav_btn two">Cicák</a>
</div>

<div class="table" style="background-color: white">
  <table>
    <thead>
      <tr>
        <th>Név</th>
        <th>Súly</th>
        <th>Kedvenc étel</th>
        <th>Barátságos?</th>
      </tr>
    </thead>
    <tbody>
      <% cicak.forEach(function(cica){ %>
      <tr>
        <td><%= cica.nev %></td>
        <td><%= cica.suly %></td>
        <td><%= cica.etel %></td>
        <td><%= cica.baratsagos %></td>
        <td id="edit">
          <a href="/cica_nezet/<%= cica._id %>/edit" class="nav_btn"
            >Módosítás</a
          >
        </td>
        <td id="del">
          <a href="/cica_nezet/<%= cica._id %>/remove" class="nav_btn"
            >Törlés</a
          >
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <div class="new_cat">
    <a href="/cica_nezet/add" class="nav_btn" id="new_cat_btn"
      >Új cica hozzáadása</a
    >
  </div>
</div>

<%- include('footer') -%>
